def word_count(result):                                                                                            
    strg = result.split()                                                                                          
    c = len(strg)                                                                                                  
    return c                                                                                                       
                                                                                                                   
def letter_count(result):                                                                                          
    strg=[]                                                                                                        
    chars ={}                                                                                              
    s = result.lower().split()                                                                                     
    for ch in s:                                                                                                   
        for chs in ch: for chs in ch:                                                                         
            strg.append(chs) 
    for word in strg:
        chars[word] = word
        if word == "h":
            if word in chars:
                chars[word]+=1 
                print(chars) 
            elif word not in chars:
                #print(chars[word])
                chars[word] = 1
    return chars
